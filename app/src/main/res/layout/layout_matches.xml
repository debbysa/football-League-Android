<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_status"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintGuide_begin="140dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_match_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/hint_match_status"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            card_view:layout_constraintBottom_toTopOf="@+id/text_match_time"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline_status"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/text_match_time"
            android:layout_width="0dp"
            android:layout_height="81dp"
            android:text="@string/hint_match_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/text_match_status"
            card_view:layout_constraintStart_toStartOf="@+id/text_match_status"
            card_view:layout_constraintTop_toBottomOf="@+id/text_match_status" />

        <!--<TextView-->
        <!--android:id="@+id/text_match_day"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:text="@string/hint_match_day"-->
        <!--android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
        <!--card_view:layout_constraintBottom_toBottomOf="parent"-->
        <!--card_view:layout_constraintEnd_toEndOf="@+id/text_match_time"-->
        <!--card_view:layout_constraintStart_toStartOf="@+id/text_match_time"-->
        <!--card_view:layout_constraintTop_toBottomOf="@+id/text_match_time" />-->

        <TextView
            android:id="@+id/text_home_team"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="100dp"
            android:text="@string/hint_home_team"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingRight="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            card_view:layout_constraintBottom_toTopOf="@+id/text_away_team"
            card_view:layout_constraintStart_toStartOf="@+id/guideline_status"
            card_view:layout_constraintTop_toTopOf="@+id/text_match_status" />

        <TextView
            android:id="@+id/text_away_team"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginBottom="1dp"
            android:text="@string/hint_away_team"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            card_view:layout_constraintEnd_toEndOf="@+id/text_home_team"
            card_view:layout_constraintStart_toStartOf="@+id/text_home_team"
            card_view:layout_constraintTop_toBottomOf="@id/text_home_team" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintGuide_percent="0.8807786"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />



    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>